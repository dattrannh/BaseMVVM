<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundedView">
        <attr name="cornerRadius" format="dimension"/>
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="IconView">
        <attr name="constantShadowTranslationY" format="dimension" />
        <attr name="variableShadowTranslationY" format="dimension" />
        <attr name="scaleDown" format="float" />
        <attr name="bigBlurRadius" format="float" />
        <attr name="smallBlurRadius" format="float" />
    </declare-styleable>

    <declare-styleable name="IndicatorView">
        <attr name="radius" format="dimension" />
        <attr name="spacing" format="dimension" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="color" format="color" />
        <attr name="selectedColor" format="color" />
        <attr name="styleStroke" format="boolean" />

    </declare-styleable>
</resources>